<p id="notice"><%= notice %></p>
<% if @user.present? %>
<div class="jumbotron">
  <h1 class="display-4"><%= @user.name %></h1>
  <p class="lead"><%= @user.message %></p>
  <hr class="my-4">
  <p><strong>Conta:</strong> <%= @user.account %></p>
  <p>
    <%= link_to 'Editar', edit_user_path(@user), class:'btn btn-secondary' %> 
    <%= link_to 'Voltar', users_path, class:'btn btn-secondary' %>
  </p>
</div>
<% end %>

