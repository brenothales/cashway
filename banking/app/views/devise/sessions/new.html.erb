<div class="login">
<h6>Entrar</h6>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :account,
                required: false,
                autofocus: true,
                label: 'NÂº da conta',
                input_html: { autocomplete: "account" } %>
    <%= f.input :password,
                required: false,
                label: 'Senha',
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Acessar", class:"btn btn-secondary" %>
  </div>
<% end %>

</div>